<div
  block:scope
  block:style={{this.urlSegments}}
  block:navigation-is-open={{this.isNavigationOpen}}
  ...attributes
>
  <Application::Header
    @isNavigationOpen={{this.isNavigationOpen}}
    @toggleNavigation={{this.toggleNavigation}}
  />

  <main block:class="content">
    {{yield}}
  </main>

  <Application::CookieNotice
    @showCookieNotice={{this.showCookieNotice}}
    @toggleCookieNotice={{this.toggleCookieNotice}}
  />
  <Application::Footer />

  <div block:class="frame"></div>
</div>
