<div
  class={{bem this.styles modifiers=(hash
    is-visible=@showCookieNotice
  )}}
  ...attributes
>
  <div class={{bem this.styles "header"}}>
    {{t "cookieNotice.headline"}}
  </div>
  <div class={{bem this.styles "content"}}>
    <div class={{bem this.styles "message"}}>
      {{t "cookieNotice.message" htmlSafe=true}}
    </div>
    <div class={{bem this.styles "settings"}}>
      <div class={{bem this.styles "option"}}>
        <Input
          id="allow-required-cookies"
          disabled={{true}}
          name="allow-required-cookies"
          @type="checkbox"
          @checked={{true}}
        />
        <label for="allow-required-cookies">
          {{t "cookieNotice.options.required"}}
        </label>
      </div>
      <div class={{bem this.styles "option"}}>
        <Input
          id="allow-analyse-cookies"
          name="allow-analyse-cookies"
          @type="checkbox"
          @checked={{this.allowAnalyseCookies}}
        />
        <label for="allow-analyse-cookies">
          {{t "cookieNotice.options.analyse"}}
        </label>
      </div>
      <div class={{bem this.styles "spacer"}}></div>
      <button
        class="{{bem this.styles "button"}} {{bem this.button modifiers=(hash
          size=(if (media "isDesktop") "default" "full")
        )}}"
        type="button"
        {{on "click" this.allowSelectedCookies}}
      >
        {{t "cookieNotice.allowSelectedCookies"}}
      </button>
      <button
        class="{{bem this.styles "button"}} {{bem this.button modifiers=(hash
          size=(if (media "isDesktop") "default" "full")
        )}}"
        type="button"
        {{on "click" this.allowAllCookies}}
      >
        {{t "cookieNotice.allowAllCookies"}}
      </button>
    </div>
  </div>
</div>
