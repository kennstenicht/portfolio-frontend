<header
  class={{bem this.styles modifiers=(hash
    is-navigation-open=@isNavigationOpen
    is-project-detail=this.isProjectDetail
  )}}
  ...attributes
>
  <LinkTo
    @route="pages.home"
    class={{bem this.styles "logo"}}
  >
    <Application::Header::Logo />
  </LinkTo>

  <div class={{bem this.styles "navigation"}}>
    <div class={{bem this.styles "back-to-overview"}}>
      {{#animated-if this.isProjectDetail use=this.fadeTransition}}
        <LinkTo @route="projects">
          {{t "application.header.toOverview" htmlSafe=true}}
        </LinkTo>
      {{/animated-if}}
    </div>

    <div
      class={{bem this.styles "toggle"}}
      role="button"
      {{on "click" this.toggleNavigation}}
    >
      <div class={{bem this.styles "label"}}>
        {{this.menuLabel}}
      </div>
      <div class={{bem this.styles "burger"}}>
        <div class={{bem this.styles "layer" modifiers=(hash
          is-top=true
        )}}></div>
        <div class={{bem this.styles "layer" modifiers=(hash
          is-middle=true
        )}} ></div>
        <div class={{bem this.styles "layer" modifiers=(hash
          is-bottom=true
        )}} ></div>
      </div>
    </div>
  </div>

  <nav class={{bem this.styles "navigation-overlay"}}>
    <ul class={{bem this.styles "list"}}>
      <li class={{bem this.styles "item"}}>
        <LinkTo
          @route="projects"
          {{on "click" this.toggleNavigation}}
        >
          {{t "application.header.projects"}}
        </LinkTo>
      </li>
      <li class={{bem this.styles "item"}}>
        <LinkTo
          @route="pages.show"
          @model="about"
          {{on "click" this.toggleNavigation}}
        >
          {{t "application.header.about"}}
        </LinkTo>
      </li>
    </ul>
  </nav>
</header>
